//interfaces
`include "datapath_cache_if.vh"
`include "caches_if.vh"
`include "icache_if.vh"

//cpu types
`include "cpu_types_pkg.vh"

`timescale 1 ns / 1 ns

module icache_tb;

  parameter PERIOD = 10;

  logic CLK = 1'b0;
  logic nRST = 1'b1;

  always #(PERIOD/2) CLK++;

  datapath_cache_if dcif ();
  caches_if cif ();
  icache_if icif ();

  test PROG();

`ifndef MAPPED
  icache DUT(.CLK(CLK), .nRST(nRST), .icif(icif), .cif(cif));
`else
`endif

initial
begin
  //RESET
  nRST = 1'b0;
  icif.iREN = 1'b0;
  icif.indx = 1'b0;
  icif.tag = 1'b1;
  icif.dREN = 1'b0;
  icif.dWEN = 1'b0;

  cif.iwait = 1'b1;
  #PERIOD;
  nRST = 1'b1;

  //EMPTY CACHE INVALID READ
  icif.iREN = 1'b0;
  icif.address = 32'h0008;
  #PERIOD;
  cif.iwait = 1'b0;
  #PERIOD;
  cif.iwait = 1'b1;
  #PERIOD;
  $finish;
end

endmodule

program test;
endprogram
